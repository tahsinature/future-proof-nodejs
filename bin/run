#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const project = path.join(process.cwd(), 'tsconfig.json')
const dev = fs.existsSync(project)
let workDir = 'dist'

if (dev) {
  require('ts-node').register({ project, compiler: 'ttypescript' })
  workDir = 'src'
}

